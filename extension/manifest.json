{
  "manifest_version": 3,
  "name": "Neural Sieve",
  "description": "Capture high-signal knowledge to your Neural Sieve vault",
  "version": "0.1.0",
  "permissions": ["activeTab", "scripting", "contextMenus"],
  "host_permissions": ["http://127.0.0.1:8420/*", "<all_urls>"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
